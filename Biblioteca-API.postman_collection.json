{
  "info": {
    "name": "Biblioteca API",
    "description": "Colección de Postman para probar el microservicio de gestión de libros",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Obtener todos los libros",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/libros",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "libros"]
        }
      }
    },
    {
      "name": "Obtener libro por ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/libros/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "libros", "1"]
        }
      }
    },
    {
      "name": "Crear nuevo libro",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"titulo\": \"Cien años de soledad\",\n  \"autor\": \"Gabriel García Márquez\",\n  \"anioPublicacion\": 1967,\n  \"genero\": \"Realismo mágico\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/libros",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "libros"]
        }
      }
    },
    {
      "name": "Actualizar libro",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"titulo\": \"Cien años de soledad (Edición actualizada)\",\n  \"autor\": \"Gabriel García Márquez\",\n  \"anioPublicacion\": 1967,\n  \"genero\": \"Realismo mágico\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/libros/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "libros", "1"]
        }
      }
    },
    {
