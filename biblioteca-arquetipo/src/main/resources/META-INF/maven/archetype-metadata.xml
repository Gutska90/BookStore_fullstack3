<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor xmlns="http://maven.apache.org/archetype/1.0.0"
                      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                      xsi:schemaLocation="http://maven.apache.org/archetype/1.0.0
                      https://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
                      name="biblioteca-arquetipo">
    
    <fileSets>
        <!-- Archivos de configuración -->
        <fileSet filtered="true" packaged="false">
            <directory>src/main/resources</directory>
            <includes>
                <include>**/*.properties</include>
                <include>**/*.sql</include>
            </includes>
        </fileSet>
        
        <!-- Código fuente Java -->
        <fileSet filtered="true" packaged="true">
            <directory>src/main/java</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        
        <!-- POM principal -->
        <fileSet filtered="true" packaged="false">
            <directory></directory>
            <includes>
                <include>pom.xml</include>
            </includes>
        </fileSet>
    </fileSets>
    
    <requiredProperties>
        <requiredProperty key="groupId">
            <defaultValue>com.biblioteca</defaultValue>
        </requiredProperty>
        <requiredProperty key="artifactId">
            <defaultValue>microservicio-biblioteca</defaultValue>
        </requiredProperty>
        <requiredProperty key="version">
            <defaultValue>1.0.0</defaultValue>
        </requiredProperty>
        <requiredProperty key="package">
            <defaultValue>com.biblioteca.microservicio</defaultValue>
        </requiredProperty>
    </requiredProperties>
</archetype-descriptor>


